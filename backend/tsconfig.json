{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["esnext.asynciterable", "es5", "es2015", "dom"],
        "typeRoots": ["./types"],
        "types": ["mocha", "node"],
        "paths": {
            "src": ["src/*"],
            "@libs/*": ["src/libs/*"],
            "@models/*": ["src/models/*"],
            "@routes/*": ["src/routes/*"]
        }
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "./dist/"]
}