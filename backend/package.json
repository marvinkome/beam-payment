{
    "name": "beam-backend",
    "version": "0.1.0",
    "main": "src/index.ts",
    "author": "Marvin Kome",
    "license": "MIT",
    "scripts": {
        "build": "yarn test && tsc",
        "start-prod": "node -r module-alias/register -r dotenv/config  ./dist/src/index.js",
        "start": "nodemon --exec ts-node -r dotenv/config -r tsconfig-paths/register src/index.ts",
        "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/chai": "^4.2.14",
        "@types/express": "^4.17.8",
        "@types/mocha": "^8.0.3",
        "@types/mongoose": "^5.7.36",
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "@typescript-eslint/parser": "^4.5.0",
        "chai": "^4.2.0",
        "eslint": "^7.11.0",
        "mocha": "^8.2.0",
        "nodemon": "^2.0.6",
        "prettier": "^2.1.2",
        "ts-node": "^9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "module-alias": "^2.2.2",
        "mongoose": "^5.10.10",
        "winston": "^3.3.3"
    },
    "_moduleAliases": {
        "src": "./dist/src",
        "loaders": "./dist/src/loaders",
        "controllers": "./dist/src/controllers",
        "models": "./dist/src/models",
        "services": "./dist/src/services",
        "api": "./dist/src/api"
    }
}
